<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">

  <changeSet author="coungard" id="2024-04-30--04-create-scoring-table-01">
    <preConditions onFail="MARK_RAN">
      <not>
        <tableExists tableName="scoring"/>
      </not>
    </preConditions>
    <sql>
      CREATE TABLE scoring
      (
        id        BIGSERIAL PRIMARY KEY,
        game_id   INTEGER REFERENCES game (id),
        player_id INTEGER REFERENCES player (id),
        shirt     VARCHAR(16) NOT NULL,
        goals     INTEGER     NOT NULL,
        result    VARCHAR(16) NOT NULL,
        score     REAL        NOT NULL
      )
    </sql>
  </changeSet>

  <changeSet author="coungard" id="2024-04-30--04-create-scoring-table-02">
    <preConditions onFail="MARK_RAN">
      <tableExists tableName="scoring"/>
    </preConditions>
    <addUniqueConstraint tableName="scoring" columnNames="game_id, player_id" constraintName="game_player_index"/>
  </changeSet>

</databaseChangeLog>